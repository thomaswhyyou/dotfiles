// vim: syntax=json

{
    "rules": {
        "no-constant-condition": 0,
        "indent": [2, 4, {
            "SwitchCase": 1
        }],
        "linebreak-style": [2, "unix"],
        "semi": [2, "always"],
        "no-unused-vars": [2, {"vars": "all", "args": "none", "argsIgnorePattern": "^_"}]
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jest": true,
        "jasmine": true,
        "mocha": true
    },
    "globals": {
        "angular": false,
        "$": false
    },
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true,
        "modules": true
    },
    "plugins": [
        "react"
    ]
}
